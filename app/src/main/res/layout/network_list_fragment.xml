<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/network_list_fragment" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/status_bar" android:background="@color/primary_green" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textColor="@color/tablerow_grey" android:gravity="center" android:id="@+id/node_id" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_centerVertical="true"/>
        <TextView android:textColor="@color/tablerow_grey" android:id="@+id/node_status" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="OFFLINE" android:layout_toRightOf="@+id/node_id" android:layout_centerVertical="true"/>
        <TextView android:textColor="@color/tablerow_grey" android:id="@+id/zt_version" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/versionName" android:layout_toRightOf="@+id/node_status" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ListView android:id="@+id/joined_networks_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/status_bar" android:layout_alignParentTop="true"/>
</RelativeLayout>
